
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the voters collection
    match /voters/{voterId} {
      // Anyone can read the list of voters or individual voter data.
      // This is necessary for the public map and dashboard.
      allow read: if true;

      // Only authenticated users can create, update, or delete voter data.
      // In a production app, you might want to add more specific roles or ownership checks.
      allow write: if request.auth != null;
    }
  }
}
