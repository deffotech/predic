
{
  "entities": {
    "Voter": {
      "title": "Voter",
      "type": "object",
      "description": "Stores information about individual voters.",
      "properties": {
        "name": { "type": "string", "description": "Voter's full name." },
        "age": { "type": "number", "description": "Voter's age." },
        "party": { "type": "string", "description": "Voter's party affiliation." },
        "address": { "type": "string", "description": "Voter's full address." },
        "peopleInHouse": { "type": "number", "description": "Number of people in the voter's household." },
        "designation": { "type": "string", "description": "Voter's professional designation or job." },
        "notes": { "type": "string", "description": "Additional notes about the voter." },
        "lat": { "type": "number", "description": "Latitude of the voter's location." },
        "lng": { "type": "number", "description": "Longitude of the voter's location." },
        "createdAt": { "type": "string", "format": "date-time", "description": "Timestamp of when the voter was added." },
        "updatedAt": { "type": "string", "format": "date-time", "description": "Timestamp of the last update." }
      },
      "required": ["name", "age", "party", "address", "peopleInHouse", "designation", "lat", "lng", "createdAt"]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "voters/{voterId}": {
      "schema": { "$ref": "#/entities/Voter" },
      "description": "Stores documents for each individual voter."
    }
  }
}
